<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TierraHomes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Hide status bar -->



        <!-- âœ… Ensures system bars (status/navigation) are visible and content adjusts automatically -->
        <item name="android:fitsSystemWindows">true</item>

        <!-- Tierra Homes Custom Theme Colors -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorBorder</item>
        <item name="colorOnPrimary">@color/colorPrimaryText</item>
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Optional: Additional theme customization -->
        <item name="colorSecondary">@color/colorSecondaryText</item>
        <item name="colorOnSecondary">@color/colorBackground</item>
        <item name="colorSurface">@color/colorCard</item>
        <item name="colorOnSurface">@color/colorPrimaryText1</item>
    </style>

    <style name="Theme.TierraHomes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorCard</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorCard</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
