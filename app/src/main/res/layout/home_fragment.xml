<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.475" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.525" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Horizontal Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTopTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />
    <!-- Horizontal Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTopTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTopTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTopTitle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTopTitle5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guidelineTopTitle6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTopTitle7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTopTitle8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTopTitle9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70" />

    <!-- Horizontal Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTopTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.cardview.widget.CardView
        android:id="@+id/buyCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="@id/guidelineTopTitle2"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toTopOf="@id/guidelineTopTitle"
        app:layout_constraintEnd_toEndOf="@id/guidelineCenter">

        <!-- FrameLayout now uses colorAccent (previously on the button) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:padding="10dp">

            <!-- ImageButton now uses colorCard (previously on the background) -->
            <ImageButton
                android:id="@+id/btnBuy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/spinner_background"
                android:padding="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/buy1"
                app:tint="@color/colorAccent" />
            <!-- Tint adjusted for better contrast -->

        </FrameLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/buildCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="@id/guidelineTopTitle2"
        app:layout_constraintStart_toStartOf="@id/guidelineCenter1"
        app:layout_constraintTop_toTopOf="@id/guidelineTopTitle"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd">

        <!-- Outer background layer with padding -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:padding="10dp">

            <!-- ImageButton with inner background and color tint -->
            <ImageButton
                android:id="@+id/btnBuild"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/spinner_background"
                android:padding="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/build"
                app:tint="@color/colorAccent" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>


    <!-- Price Display -->
    <androidx.cardview.widget.CardView
        android:id="@+id/priceCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="@id/guidelineTopTitle3"
        app:layout_constraintBottom_toBottomOf="@id/guidelineTopTitle4"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd">

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="16dp"
            android:text="Budget"
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/colorCard"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/font_spinner_min"
            android:autoSizeMaxTextSize="@dimen/font_body_large"
            android:autoSizeStepGranularity="2sp"
            android:drawableLeft="@drawable/peso"/>
    </androidx.cardview.widget.CardView>

    <!-- Location Display -->
    <androidx.cardview.widget.CardView
        android:id="@+id/locationCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintTop_toTopOf="@id/guidelineTopTitle5"
        app:layout_constraintBottom_toBottomOf="@id/guidelineTopTitle6">

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Island Group, Region,\nProvince, Municipality"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/font_spinner_min"
            android:autoSizeMaxTextSize="@dimen/font_body_large"
            android:autoSizeStepGranularity="2sp"
            android:gravity="center"
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/colorCard"
            android:background="@color/colorAccent"
            android:padding="16dp"
            android:drawableLeft="@drawable/location"
            android:ellipsize="end"
            android:maxLines="2" />
    </androidx.cardview.widget.CardView>

    <!-- Users Display -->
    <androidx.cardview.widget.CardView
        android:id="@+id/usersCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintTop_toTopOf="@id/guidelineTopTitle7"
        app:layout_constraintBottom_toBottomOf="@id/guidelineTopTitle8">

        <TextView
            android:id="@+id/tvUserInside"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="USERS"
            android:paddingEnd="60dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/font_spinner_min"
            android:autoSizeMaxTextSize="@dimen/font_body_large"
            android:autoSizeStepGranularity="2sp"
            android:gravity="center"
            android:textColor="@color/colorCard"
            android:background="@color/colorAccent"
            android:padding="16dp"
            android:fontFamily="@font/bahnschrift"
            android:drawableLeft="@drawable/user"/>
    </androidx.cardview.widget.CardView>

    <!-- Pie Chart -->
    <!-- Add this after your existing CardViews -->
    <androidx.cardview.widget.CardView
        android:id="@+id/chartCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintTop_toTopOf="@id/guidelineTopTitle9"
        app:layout_constraintBottom_toBottomOf="@id/guidelineTopTitle1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/noDataText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="No Chart Data Available"
                android:textSize="16sp"
                android:textColor="@color/colorCard"
                android:fontFamily="@font/bahnschrift"
                android:gravity="center"
                android:background="@color/colorAccent"
                android:padding="16dp"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loadingAnimation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loading_animation"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
