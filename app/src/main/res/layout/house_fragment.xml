<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.475" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.525" />

    <!-- Vertical Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Horizontal Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineImageTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineImageTop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineDetailsTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineDetailsTop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineDetailsTop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineButtonsTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineButtonsTop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Title Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/titleCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintBottom_toBottomOf="@id/guidelineImageTop">

        <!-- Title Card TextView -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="RURAL"
            android:background="@color/colorAccent"
            android:paddingVertical="12dp"
            android:paddingHorizontal="32dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/colorCard"
            android:letterSpacing="0.1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/font_spinner_min"
            android:autoSizeMaxTextSize="@dimen/font_headline_large"
            android:autoSizeStepGranularity="2sp" />
    </androidx.cardview.widget.CardView>

    <!-- House Image Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/imageCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="@id/guidelineImageTop1"
        app:layout_constraintBottom_toTopOf="@id/guidelineDetailsTop"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/farmhouse1"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/detailsCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="@id/guidelineDetailsTop1"
        app:layout_constraintBottom_toBottomOf="@id/guidelineDetailsTop2"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorAccent"
            android:padding="16dp">

            <!-- Inner CardView with background -->
            <androidx.cardview.widget.CardView
                android:id="@+id/detailsInnerCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/colorCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/propertyType"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/colorCard1"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="PROPERTY TYPE: FARMHOUSE"
                        android:textColor="@color/colorPrimaryText1"
                        android:textStyle="bold"
                        android:fontFamily="@font/bahnschrift"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_large"
                        android:autoSizeStepGranularity="2sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/lotSize"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/colorCard1"
                        android:gravity="center"
                        android:text="LOT SIZE: 35 SQM"
                        android:textColor="@color/colorPrimaryText1"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:fontFamily="@font/bahnschrift"                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_large"
                        android:autoSizeStepGranularity="2sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/bedBathCount"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/colorCard1"
                        android:gravity="center"
                        android:text="BEDROOMS: 2  |  BATHROOMS: 1"
                        android:textColor="@color/colorPrimaryText1"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:fontFamily="@font/bahnschrift"                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_large"
                        android:autoSizeStepGranularity="2sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/colorCard1"
                        android:gravity="center"
                        android:text="PRICE: â‚±4,500,000"
                        android:textColor="@color/colorPrimaryText1"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:fontFamily="@font/bahnschrift"                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_large"
                        android:autoSizeStepGranularity="2sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/salesRate"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/colorCard1"
                        android:gravity="center"
                        android:text="Rate"
                        android:textColor="@color/colorPrimaryText1"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:fontFamily="@font/bahnschrift"                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_large"
                        android:autoSizeStepGranularity="2sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




    <!-- Button Text -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/insight_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="INSIGHTS"
        android:textStyle="bold"
        android:textColor="@color/colorCard"
        android:backgroundTint="@color/colorAccent"
        app:cornerRadius="20dp"
        app:elevation="6dp"
        android:fontFamily="@font/bahnschrift"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="@dimen/font_spinner_min"
        android:autoSizeMaxTextSize="@dimen/font_button_primary"
        android:autoSizeStepGranularity="2sp"
        app:layout_constraintTop_toTopOf="@id/guidelineButtonsTop"
        app:layout_constraintBottom_toBottomOf="@id/guidelineButtonsTop1"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineCenter"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/done_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="BUY"
        android:textStyle="bold"
        android:textColor="@color/colorCard"
        android:backgroundTint="@color/colorAccent"
        app:cornerRadius="20dp"
        app:elevation="6dp"
        android:fontFamily="@font/bahnschrift"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="@dimen/font_spinner_min"
        android:autoSizeMaxTextSize="@dimen/font_button_primary"
        android:autoSizeStepGranularity="2sp"
        app:layout_constraintTop_toTopOf="@id/guidelineButtonsTop"
        app:layout_constraintBottom_toBottomOf="@id/guidelineButtonsTop1"
        app:layout_constraintStart_toStartOf="@id/guidelineCenter1"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"/>


</androidx.constraintlayout.widget.ConstraintLayout>
