<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Vertical Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Horizontal Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_between2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_between3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_between6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_between7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_between10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <LinearLayout
        android:id="@+id/budgetContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:layout_constraintBottom_toBottomOf="@id/guideline_between2">

        <!-- Total Budget Title -->
        <TextView
            android:id="@+id/totalbudget"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/bahnschrift"
            android:text="TOTAL BUDGET"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/font_spinner_min"
            android:autoSizeMaxTextSize="@dimen/font_headline_medium"
            android:autoSizeStepGranularity="2sp"
            android:textStyle="bold"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:textColor="@color/colorPrimaryText" />

        <!-- Price Display -->
        <androidx.cardview.widget.CardView
            android:id="@+id/budgetDisplayCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:drawableLeft="@drawable/peso"
                android:gravity="center"
                android:fontFamily="@font/bahnschrift"
                android:padding="16dp"
                android:text="Budget"
                android:textStyle="bold"
                android:textColor="@color/colorCard"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/font_spinner_min"
                android:autoSizeMaxTextSize="@dimen/font_headline_medium"
                android:autoSizeStepGranularity="2sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/addBudgetContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="4"
        app:layout_constraintTop_toTopOf="@id/guideline_between3"
        app:layout_constraintBottom_toBottomOf="@id/guideline_between6"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end">

        <!-- Add Budget Title -->
        <TextView
            android:id="@+id/add_budget_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="ADD BUDGET"
            android:fontFamily="@font/bahnschrift"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/font_spinner_min"
            android:autoSizeMaxTextSize="@dimen/font_headline_medium"
            android:autoSizeStepGranularity="2sp"
            android:textStyle="bold"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:textColor="@color/colorPrimaryText" />

        <!-- Add Budget Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/add_budget_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:id="@+id/add_budget_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/colorAccent"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/peso"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/colorCard" />

                    <EditText
                        android:id="@+id/moneyy"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryText1"
                        android:textColorHint="@color/colorSecondaryText"
                        android:background="@drawable/rounded_input_background"
                        android:gravity="center"
                        android:hint="Enter a budget"
                        android:fontFamily="@font/bahnschrift"
                        android:inputType="numberDecimal"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_headline_medium"
                        android:autoSizeStepGranularity="2sp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/colorCard1"
                    android:letterSpacing="0.1"
                    android:text="ADD"
                    android:fontFamily="@font/bahnschrift"
                    android:textColor="@color/colorPrimaryText1"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/font_spinner_min"
                    android:autoSizeMaxTextSize="@dimen/font_button_primary"
                    android:autoSizeStepGranularity="2sp"
                    android:textStyle="bold"
                    app:cornerRadius="20dp"
                    app:elevation="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/budgetHistoryContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="4"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toTopOf="@id/guideline_between7"
        app:layout_constraintBottom_toBottomOf="@id/guideline_between10">

        <!-- Budget History Title -->
        <TextView
            android:id="@+id/historybudget"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="TRANSACTION HISTORY"
            android:fontFamily="@font/bahnschrift"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/font_spinner_min"
            android:autoSizeMaxTextSize="@dimen/font_headline_medium"
            android:autoSizeStepGranularity="2sp"
            android:textStyle="bold"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:textColor="@color/colorPrimaryText" />

        <!-- Budget History Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/historyCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp">

            <ScrollView
                android:id="@+id/budget_history_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:background="@color/colorAccent"
                android:fillViewport="true"
                android:clipToPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Repeatable Budget History Item -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="4dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/colorCard1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:baselineAligned="false">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/peso"
                                app:tint="@color/colorAccent" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="+₱500,000.00"
                                android:textColor="@color/colorPrimaryText1"
                                android:fontFamily="@font/bahnschrift"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="@dimen/font_spinner_min"
                                android:autoSizeMaxTextSize="@dimen/font_body_large"
                                android:autoSizeStepGranularity="2sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2024-01-20"
                                android:textColor="@color/colorPrimaryText1"
                                android:fontFamily="@font/bahnschrift"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="1sp"
                                android:autoSizeMaxTextSize="10sp"
                                android:autoSizeStepGranularity="1sp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Duplicate this block for more entries -->
                    <!-- ... -->

                    <!-- Repeatable Budget History Item -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="4dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/colorCard1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:baselineAligned="false">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/peso"
                                android:layout_marginEnd="8dp"
                                app:tint="@color/colorAccent" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="+₱300,000.00"
                                android:textColor="@color/colorPrimaryText1"
                                android:fontFamily="@font/bahnschrift"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="@dimen/font_spinner_min"
                                android:autoSizeMaxTextSize="@dimen/font_body_large"
                                android:autoSizeStepGranularity="2sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2024-01-20"
                                android:textColor="@color/colorPrimaryText1"
                                android:fontFamily="@font/bahnschrift"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="1sp"
                                android:autoSizeMaxTextSize="10sp"
                                android:autoSizeStepGranularity="1sp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
