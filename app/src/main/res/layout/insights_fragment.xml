<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Horizontal Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineChartTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineChartTop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineInfoTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineInfoTop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineButtonTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineButtonTop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineButtonTop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Vertical Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Title Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/titleCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        app:layout_constraintBottom_toTopOf="@id/guidelineChartTop"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:paddingVertical="12dp"
            android:paddingHorizontal="32dp"
            android:fontFamily="@font/bahnschrift"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/font_spinner_min"
            android:autoSizeMaxTextSize="@dimen/font_headline_large"
            android:autoSizeStepGranularity="2sp"
            android:gravity="center"
            android:textColor="@color/colorCard"
            android:letterSpacing="0.1"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <!-- Chart Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/chartCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="@id/guidelineChartTop1"
        app:layout_constraintBottom_toTopOf="@id/guidelineInfoTop"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/priceChart"
            android:layout_width="match_parent"
            android:fontFamily="@font/bahnschrift"
            android:background="@color/colorAccent"
            android:layout_height="match_parent"
            android:padding="16dp" />

    </androidx.cardview.widget.CardView>

    <!-- Info Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/infoContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="@id/guidelineInfoTop1"
        app:layout_constraintBottom_toTopOf="@id/guidelineButtonTop"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:padding="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorCard"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/font_spinner_min"
                    android:autoSizeMaxTextSize="@dimen/font_body_large"
                    android:fontFamily="@font/bahnschrift"
                    android:autoSizeStepGranularity="2sp"
                    android:gravity="top|center_horizontal"
                    android:lineSpacingExtra="4dp"
                    android:paddingTop="0dp" />

            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Done Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_done"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="OKAY"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        android:textColor="@color/colorCard"
        android:backgroundTint="@color/colorAccent"
        app:cornerRadius="20dp"
        app:elevation="8dp"
        android:fontFamily="@font/bahnschrift"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="@dimen/font_spinner_min"
        android:autoSizeMaxTextSize="@dimen/font_button_primary"
        android:autoSizeStepGranularity="2sp"
        app:layout_constraintTop_toTopOf="@id/guidelineButtonTop1"
        app:layout_constraintBottom_toBottomOf="@id/guidelineButtonTop2"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd" />
</androidx.constraintlayout.widget.ConstraintLayout>
