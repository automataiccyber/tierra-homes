<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Vertical Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Horizontal Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_content_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_content_top1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_content_top2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Image Display -->
    <androidx.cardview.widget.CardView
        android:id="@+id/imageCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="6dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintBottom_toTopOf="@id/guideline_content_top">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/sub_logo"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/textBlockContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toTopOf="@id/guideline_content_top1"
        app:layout_constraintBottom_toBottomOf="@id/guideline_content_top2">

        <androidx.cardview.widget.CardView
            android:id="@+id/textBlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:weightSum="3"
                android:background="@color/colorAccent">

                <!-- Description Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/descriptionCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/descriptionText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Cost Estimation\nAt Your Fingertips"
                        android:textColor="@color/colorPrimaryText1"
                        android:background="@color/colorCard1"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/bahnschrift"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_headline_medium"
                        android:autoSizeStepGranularity="2sp"/>
                </androidx.cardview.widget.CardView>

                <!-- Version Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/versionCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/versionText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Version: 1.1.8"
                        android:textColor="@color/colorPrimaryText1"
                        android:background="@color/colorCard1"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/bahnschrift"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_headline_medium"
                        android:autoSizeStepGranularity="2sp"/>
                </androidx.cardview.widget.CardView>

                <!-- Contact Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/contactCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    app:cardElevation="4dp">

                    <TextView
                        android:paddingRight="@dimen/spacing_small"
                        android:paddingLeft="@dimen/spacing_small"
                        android:id="@+id/contactText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/contact_underlined"
                        android:textColor="@color/colorPrimaryText1"
                        android:background="@color/colorCard1"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/bahnschrift"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_headline_medium"
                        android:autoSizeStepGranularity="2sp"
                        android:maxLines="2"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
