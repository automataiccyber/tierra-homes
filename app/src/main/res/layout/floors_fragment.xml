<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Vertical Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Horizontal Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Header Text -->
    <androidx.cardview.widget.CardView
        android:id="@+id/titleCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="@id/guideline_1"
        app:layout_constraintBottom_toTopOf="@id/guideline_11"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:paddingHorizontal="32dp"
            android:text="SUBURBAN"
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/colorCard"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/font_spinner_min"
            android:autoSizeMaxTextSize="@dimen/font_headline_large"
            android:autoSizeStepGranularity="2sp"
            android:letterSpacing="0.1"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Floor Buttons Container -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/guideline_2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_5"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end">

        <!-- Existing CardViews with their content remain unchanged -->
        <androidx.cardview.widget.CardView
            android:id="@+id/floor1Card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/colorAccent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="FLOOR THREE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/font_spinner_min"
                    android:autoSizeMaxTextSize="@dimen/font_headline_medium"
                    android:fontFamily="@font/bahnschrift"
                    android:autoSizeStepGranularity="2sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryText1"
                    android:backgroundTint="@color/colorCard1"
                    app:cornerRadius="12dp"
                    app:elevation="4dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/floor2Card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/colorAccent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="FLOOR TWO"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/font_spinner_min"
                    android:autoSizeMaxTextSize="@dimen/font_headline_medium"
                    android:fontFamily="@font/bahnschrift"
                    android:autoSizeStepGranularity="2sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryText1"
                    android:backgroundTint="@color/colorCard1"
                    app:cornerRadius="12dp"
                    app:elevation="4dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/floor3Card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/colorAccent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="FLOOR ONE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/font_spinner_min"
                    android:autoSizeMaxTextSize="@dimen/font_headline_medium"
                    android:fontFamily="@font/bahnschrift"
                    android:autoSizeStepGranularity="2sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryText1"
                    android:backgroundTint="@color/colorCard1"
                    app:cornerRadius="12dp"
                    app:elevation="4dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- DONE Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="DONE"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="@dimen/font_spinner_min"
        android:autoSizeMaxTextSize="@dimen/font_button_primary"
        android:fontFamily="@font/bahnschrift"
        android:autoSizeStepGranularity="2sp"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        android:textColor="@color/colorCard"
        android:backgroundTint="@color/colorAccent"
        app:cornerRadius="20dp"
        app:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/guideline_55"
        app:layout_constraintBottom_toTopOf="@id/guideline_7"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

</androidx.constraintlayout.widget.ConstraintLayout>
