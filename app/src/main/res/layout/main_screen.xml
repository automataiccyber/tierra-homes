<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainScreenActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />


    <!-- Header with curved bottom -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/topGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <!-- Logo and menu -->
            <ImageView
                android:id="@+id/appname"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/header"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:background="@drawable/rounded_background"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/menuButton"
                app:layout_constraintWidth_percent="0.75"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="1.0" />

            <ImageView
                android:id="@+id/menuButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/menu"
                android:contentDescription="Menu"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="1.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <!-- Dropdown Menu - overlayed below header -->
    <LinearLayout
        android:id="@+id/dropdownMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorBackground"
        android:visibility="gone"
        android:elevation="8dp"
        android:padding="8dp"
        android:layout_marginEnd="16dp"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guidelineEnd1"
        app:layout_constraintTop_toBottomOf="@id/header">

        <!-- Theme Toggle -->
        <ImageView
            android:id="@+id/themeToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/switchon"
            android:layout_gravity="center"
            android:contentDescription="Toggle Theme"
            android:padding="8dp" />

        <!-- Dropdown Items -->
        <TextView
            android:id="@+id/menuBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUDGET"
            android:layout_gravity="center"
            android:padding="8dp"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"
            android:fontFamily="@font/bahnschrift"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/font_spinner_min"
            android:autoSizeMaxTextSize="@dimen/font_body_large"
            android:autoSizeStepGranularity="1sp" />
        <TextView
            android:id="@+id/menuLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOCATION"
            android:padding="8dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"
            android:fontFamily="@font/bahnschrift"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/font_spinner_min"
            android:autoSizeMaxTextSize="@dimen/font_body_large"
            android:autoSizeStepGranularity="1sp" />
        <TextView
            android:id="@+id/menuLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:padding="8dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"
            android:fontFamily="@font/bahnschrift"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/font_spinner_min"
            android:autoSizeMaxTextSize="@dimen/font_body_large"
            android:autoSizeStepGranularity="1sp" />
    </LinearLayout>

    <!-- Content Frame -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/topGuideline"
        app:layout_constraintBottom_toBottomOf="@id/bottomGuideline" />

    <!-- Bottom Navigation with curved top -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="@id/bottomGuideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <!-- Asset Button -->
            <LinearLayout
                android:id="@+id/assetContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/homeContainer"
                app:layout_constraintHorizontal_weight="1">

                <ImageView
                    android:id="@+id/keyButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/key"
                    android:scaleType="fitCenter"
                    android:padding="4dp" />

                <!-- Asset Indicator -->
                <View
                    android:id="@+id/assetIndicator"
                    android:layout_width="60dp"
                    android:layout_height="5dp"
                    android:background="@color/colorBackground"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <!-- Home Button -->
            <LinearLayout
                android:id="@+id/homeContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/assetContainer"
                app:layout_constraintEnd_toStartOf="@id/infoContainer"
                app:layout_constraintHorizontal_weight="1">

                <ImageView
                    android:id="@+id/homeButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/home"
                    android:scaleType="fitCenter"
                    android:padding="4dp" />

                <View
                    android:id="@+id/homeIndicator"
                    android:layout_width="60dp"
                    android:layout_height="5dp"
                    android:background="@color/colorBackground"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"/>


            </LinearLayout>

            <!-- Info Button -->
            <LinearLayout
                android:id="@+id/infoContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/homeContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1">

                <ImageView
                    android:id="@+id/infoButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/info"
                    android:scaleType="fitCenter"
                    android:padding="4dp" />

                <View
                    android:id="@+id/infoIndicator"
                    android:layout_width="60dp"
                    android:layout_height="5dp"
                    android:background="@color/colorBackground"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
