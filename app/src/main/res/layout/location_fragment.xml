<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Vertical Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Horizontal Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <LinearLayout
        android:id="@+id/yourLocationContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintTop_toTopOf="@id/guideline_top_5"
        app:layout_constraintBottom_toBottomOf="@id/guideline_30"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end">

        <!-- "Your Location" Title -->
        <TextView
            android:id="@+id/yourlocation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="YOUR LOCATION"
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/colorPrimaryText"
            android:letterSpacing="0.1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/font_spinner_min"
            android:autoSizeMaxTextSize="@dimen/font_headline_medium"
            android:autoSizeStepGranularity="2sp"
            android:textStyle="bold" />

        <!-- Location Placeholder Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/locationPlaceholderCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp">

            <TextView
                android:id="@+id/location_placeholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/bahnschrift"
                android:text="Island Group, Region,\nProvince, Municipality"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/font_spinner_min"
                android:autoSizeMaxTextSize="@dimen/font_headline_medium"
                android:autoSizeStepGranularity="2sp"
                android:gravity="center"
                android:textColor="@color/colorCard"
                android:background="@color/colorAccent"
                android:padding="16dp"
                android:drawableLeft="@drawable/location"
                android:ellipsize="end"
                android:maxLines="3" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <!-- Location Spinners Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/locationSpinnerContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="@id/guideline_35"
        app:layout_constraintBottom_toTopOf="@id/guideline_75"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end">

        <LinearLayout
            android:id="@+id/location_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorAccent"
            android:padding="16dp">

            <Spinner
                android:id="@+id/spinner_island"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/bahnschrift"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/font_spinner_min"
                android:autoSizeMaxTextSize="@dimen/font_body_large"
                android:autoSizeStepGranularity="1sp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/spinner_background"
                android:popupBackground="@color/colorCard"
                android:padding="8dp"/>

            <Spinner
                android:id="@+id/spinner_region"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/bahnschrift"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/font_spinner_min"
                android:autoSizeMaxTextSize="@dimen/font_body_large"
                android:autoSizeStepGranularity="2sp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/spinner_background"
                android:popupBackground="@color/colorCard"
                android:padding="8dp"/>

            <Spinner
                android:id="@+id/spinner_province"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/bahnschrift"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/font_spinner_min"
                android:autoSizeMaxTextSize="@dimen/font_body_large"
                android:autoSizeStepGranularity="2sp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/spinner_background"
                android:popupBackground="@color/colorCard"
                android:padding="8dp"/>

            <Spinner
                android:id="@+id/spinner_municipality"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/bahnschrift"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/font_spinner_min"
                android:autoSizeMaxTextSize="@dimen/font_body_large"
                android:autoSizeStepGranularity="2sp"
                android:background="@drawable/spinner_background"
                android:popupBackground="@color/colorCard"
                android:padding="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Change Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/change"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="CHANGE"
        android:fontFamily="@font/bahnschrift"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="@dimen/font_spinner_min"
        android:autoSizeMaxTextSize="@dimen/font_button_primary"
        android:autoSizeStepGranularity="2sp"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        android:textColor="@color/colorCard"
        android:backgroundTint="@color/colorAccent"
        app:cornerRadius="20dp"
        app:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/guideline_80"
        app:layout_constraintBottom_toTopOf="@id/guideline_90"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

</androidx.constraintlayout.widget.ConstraintLayout>
