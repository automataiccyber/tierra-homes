<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Vertical Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Horizontal Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_okay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_okay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Title Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/titleCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="@id/top_floor"
        app:layout_constraintBottom_toBottomOf="@id/bottom_floor"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end">

        <TextView
            android:id="@+id/floor_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:paddingVertical="12dp"
            android:paddingHorizontal="32dp"
            android:text="FIRST FLOOR"
            android:fontFamily="@font/bahnschrift"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/font_spinner_min"
            android:autoSizeMaxTextSize="@dimen/font_headline_large"
            android:autoSizeStepGranularity="2sp"
            android:gravity="center"
            android:textColor="@color/colorCard"
            android:letterSpacing="0.1"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/floor_details_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end">

        <LinearLayout
            android:id="@+id/floor_details_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:weightSum="6">

            <!-- Flooring Item - Horizontal Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="8dp">

                <!-- Left Column: Type + Spinner -->
                <LinearLayout
                    android:id="@+id/floor_left_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="FLOORING TYPE:"
                        android:textStyle="bold"
                        android:layout_weight="0.5"
                        android:textAllCaps="true"
                        android:layout_gravity="start"
                        android:textColor="@color/colorCard"
                        android:fontFamily="@font/bahnschrift"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_large"
                        android:autoSizeStepGranularity="2sp"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinner_floor"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/colorCard"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- Right Column: Image -->
                <LinearLayout
                    android:id="@+id/floor_right_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text_price_floor"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Price: $0.00"
                        android:textColor="@color/colorCard1"
                        android:textStyle="bold"
                        android:fontFamily="@font/bahnschrift"
                        android:layout_marginBottom="4dp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_medium"
                        android:autoSizeStepGranularity="2sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_floor"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">

                        <ImageView
                            android:id="@+id/image_floor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:src="@drawable/sub_logo" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <!-- Wall Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="8dp">

                <!-- Left Column: Type + Spinner (WALL) -->
                <LinearLayout
                    android:id="@+id/wall_left_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="WALL TYPE:"
                        android:textStyle="bold"
                        android:layout_weight="0.5"
                        android:textAllCaps="true"
                        android:layout_gravity="start"
                        android:textColor="@color/colorCard"
                        android:fontFamily="@font/bahnschrift"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_large"
                        android:autoSizeStepGranularity="2sp"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinner_wall"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/colorCard"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- Right Column: Image (WALL) -->
                <LinearLayout
                    android:id="@+id/wall_right_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text_price_wall"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Price: $0.00"
                        android:textColor="@color/colorCard1"
                        android:textStyle="bold"
                        android:fontFamily="@font/bahnschrift"
                        android:layout_marginBottom="4dp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_medium"
                        android:autoSizeStepGranularity="2sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_wall"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">

                        <ImageView
                            android:id="@+id/image_wall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:src="@drawable/sub_logo" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <!-- Window Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="8dp">

                <!-- Left Column: Type + Spinner (WINDOW) -->
                <LinearLayout
                    android:id="@+id/window_left_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="WINDOW TYPE:"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_gravity="start"
                        android:textColor="@color/colorCard"
                        android:fontFamily="@font/bahnschrift"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_large"
                        android:autoSizeStepGranularity="2sp"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinner_window"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/colorCard"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- Quantity Column (WINDOW) -->
                <LinearLayout
                    android:id="@+id/window_quantity_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="WINDOW COUNT:"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_gravity="start"
                        android:textColor="@color/colorCard"
                        android:fontFamily="@font/bahnschrift"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_large"
                        android:autoSizeStepGranularity="2sp"
                        android:layout_marginBottom="4dp"  />

                    <EditText
                        android:id="@+id/edittext_window_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:hint="Enter count"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="6sp"
                        android:autoSizeMaxTextSize="10sp"
                        android:autoSizeStepGranularity="1sp"
                        android:textColor="@color/colorPrimaryText1"
                        android:textColorHint="@color/colorSecondaryText"
                        android:background="@drawable/rounded_input_background"
                        android:gravity="center"
                        android:fontFamily="@font/bahnschrift" />
                </LinearLayout>

                <!-- Right Column: Image (WINDOW) -->
                <LinearLayout
                    android:id="@+id/window_right_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text_price_window"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Price: $0.00"
                        android:textColor="@color/colorCard1"
                        android:textStyle="bold"
                        android:fontFamily="@font/bahnschrift"
                        android:layout_marginBottom="4dp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_medium"
                        android:autoSizeStepGranularity="2sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_window"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">

                        <ImageView
                            android:id="@+id/image_window"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:src="@drawable/sub_logo" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <!-- Door Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="8dp">

                <!-- Left Column: Type + Spinner (DOOR) -->
                <LinearLayout
                    android:id="@+id/door_left_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="DOOR TYPE:"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_gravity="start"
                        android:textColor="@color/colorCard"
                        android:fontFamily="@font/bahnschrift"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_large"
                        android:autoSizeStepGranularity="2sp"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinner_door"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/colorCard"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- Quantity Column (DOOR) -->
                <LinearLayout
                    android:id="@+id/door_quantity_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="DOOR COUNT:"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_gravity="start"
                        android:textColor="@color/colorCard"
                        android:fontFamily="@font/bahnschrift"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_large"
                        android:autoSizeStepGranularity="2sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/edittext_door_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:hint="Enter count"
                        android:textColorHint="@color/colorSecondaryText"
                        android:inputType="number"
                        android:background="@drawable/rounded_input_background"
                        android:gravity="center"
                        android:autoSizeTextType="uniform"
                        android:textColor="@color/colorPrimaryText1"
                        android:autoSizeMinTextSize="6sp"
                        android:autoSizeMaxTextSize="10sp"
                        android:autoSizeStepGranularity="1sp"
                        android:fontFamily="@font/bahnschrift" />
                </LinearLayout>

                <!-- Right Column: Image (DOOR) -->
                <LinearLayout
                    android:id="@+id/door_right_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text_price_door"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Price: $0.00"
                        android:textColor="@color/colorCard1"
                        android:textStyle="bold"
                        android:fontFamily="@font/bahnschrift"
                        android:layout_marginBottom="4dp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_medium"
                        android:autoSizeStepGranularity="2sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_door"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">

                        <ImageView
                            android:id="@+id/image_door"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:src="@drawable/sub_logo" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <!-- Balcony Item -->
            <LinearLayout
                android:id="@+id/balcony_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="8dp">

                <!-- Left Column: Type + Spinner (BALCONY) -->
                <LinearLayout
                    android:id="@+id/balcony_left_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="BALCONY TYPE:"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_gravity="start"
                        android:textColor="@color/colorCard"
                        android:fontFamily="@font/bahnschrift"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_large"
                        android:autoSizeStepGranularity="2sp"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinner_balcony"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/colorCard"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- Right Column: Image (BALCONY) -->
                <LinearLayout
                    android:id="@+id/balcony_right_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text_price_balcony"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Price: $0.00"
                        android:textColor="@color/colorCard1"
                        android:textStyle="bold"
                        android:fontFamily="@font/bahnschrift"
                        android:layout_marginBottom="4dp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_medium"
                        android:autoSizeStepGranularity="2sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_balcony"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">

                        <ImageView
                            android:id="@+id/image_balcony"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:src="@drawable/sub_logo" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <!-- Staircase Item -->
            <LinearLayout
                android:id="@+id/staircase_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="8dp">

                <!-- Left Column: Type + Spinner (STAIRCASE) -->
                <LinearLayout
                    android:id="@+id/staircase_left_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="STAIRCASE TYPE:"
                        android:layout_weight="0.5"

                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_gravity="start"
                        android:textColor="@color/colorCard"
                        android:fontFamily="@font/bahnschrift"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_large"
                        android:autoSizeStepGranularity="2sp"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinner_staircase"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/colorCard"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- Right Column: Image (STAIRCASE) -->
                <LinearLayout
                    android:id="@+id/staircase_right_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text_price_staircase"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Price: $0.00"
                        android:textColor="@color/colorCard1"
                        android:textStyle="bold"
                        android:fontFamily="@font/bahnschrift"
                        android:layout_marginBottom="4dp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/font_spinner_min"
                        android:autoSizeMaxTextSize="@dimen/font_body_medium"
                        android:autoSizeStepGranularity="2sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_staircase"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">

                        <ImageView
                            android:id="@+id/image_staircase"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
