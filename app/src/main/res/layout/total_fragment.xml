<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Vertical Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Horizontal Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_details_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_button_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Total Amount Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/totalAmountCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:layout_constraintBottom_toBottomOf="@id/guideline_top1"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end">

        <TextView
            android:id="@+id/totalAmount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TOTAL: ₱232,083"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/bahnschrift"
            android:autoSizeMinTextSize="@dimen/font_spinner_min"
            android:autoSizeMaxTextSize="@dimen/font_headline_medium"
            android:autoSizeStepGranularity="2sp"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:paddingHorizontal="32dp"
            android:textColor="@color/colorCard1"
            android:background="@color/colorAccent"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <!-- Cost Breakdown Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="@id/guideline_details_top"
        app:layout_constraintBottom_toBottomOf="@id/guideline_top2"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end">

        <LinearLayout
            android:id="@+id/costBreakdownContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorAccent"
            android:padding="16dp">

            <TextView
                android:id="@+id/thirdFloorPrice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="12dp"
                android:background="@drawable/spinner_background"
                android:gravity="center"
                android:text="FLOOR THREE: ₱50,303"
                android:textColor="@color/colorPrimaryText1"
                android:fontFamily="@font/bahnschrift"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/font_spinner_min"
                android:autoSizeMaxTextSize="@dimen/font_body_large"
                android:autoSizeStepGranularity="2sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/secondFloorPrice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="12dp"
                android:background="@drawable/spinner_background"
                android:gravity="center"
                android:text="FLOOR TWO: ₱34,872"
                android:textColor="@color/colorPrimaryText1"
                android:fontFamily="@font/bahnschrift"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/font_spinner_min"
                android:autoSizeMaxTextSize="@dimen/font_body_large"
                android:autoSizeStepGranularity="2sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/firstFloorPrice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="12dp"
                android:background="@drawable/spinner_background"
                android:gravity="center"
                android:text="FLOOR ONE: ₱24,872"
                android:textColor="@color/colorPrimaryText1"
                android:fontFamily="@font/bahnschrift"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/font_spinner_min"
                android:autoSizeMaxTextSize="@dimen/font_body_large"
                android:autoSizeStepGranularity="2sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lotPrice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="12dp"
                android:background="@drawable/spinner_background"
                android:gravity="center"
                android:text="LOT PRICE: ₱1,293,023"
                android:textColor="@color/colorPrimaryText1"
                android:fontFamily="@font/bahnschrift"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/font_spinner_min"
                android:autoSizeMaxTextSize="@dimen/font_body_large"
                android:autoSizeStepGranularity="2sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/laborCost"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_background"
                android:gravity="center"
                android:text="LABOR COST: ₱293,023"
                android:textColor="@color/colorPrimaryText1"
                android:fontFamily="@font/bahnschrift"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/font_spinner_min"
                android:autoSizeMaxTextSize="@dimen/font_body_large"
                android:autoSizeStepGranularity="2sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Build Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buildButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="BUILD"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="@dimen/font_spinner_min"
        android:autoSizeMaxTextSize="@dimen/font_button_primary"
        android:autoSizeStepGranularity="2sp"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        android:fontFamily="@font/bahnschrift"
        android:textColor="@color/colorCard"
        android:backgroundTint="@color/colorAccent"
        app:cornerRadius="20dp"
        app:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/guideline_top4"
        app:layout_constraintBottom_toBottomOf="@id/guideline_button_top"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"/>

</androidx.constraintlayout.widget.ConstraintLayout>
